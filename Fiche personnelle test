<button onclick="myFunction()">Récup</button>

<p id="recup"></p>

<script>
function myFunction() {
    var x = document.getElementById("frm1");
    var text = "";
    var i;
    for (i = 0; i < x.length ;i++) {
        text += x.elements[i].value + "<br>";
    }
    document.getElementById("recup").innerHTML = text;
}
</script>
